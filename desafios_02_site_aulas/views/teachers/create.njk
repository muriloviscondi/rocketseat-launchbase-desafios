{% extends 'layout.njk' %}

{% block content %}

  <form class="card" method="POST" action="/teachers">

    <section 
      class="avatar"
      style="background: url(https://source.unsplash.com/collection/8360382/400x200) no-repeat center center / cover"
    >

    </section>

    <section class="details">
      <h3>Cadastro de Professores</h3>

      <div class="item">
        <div>Nome Completo</div>
        <div>
          <input 
            type="text" 
            name="name" 
            id="name" 
            placeholder="Digite o nome completo">
        </div>
      </div>

       <div class="item">
        <div>Idade</div>
        <div>
           <input 
            type="text" 
            name="age" 
            id="age" 
            placeholder="Digite a idade">
        </div>
      </div>

      <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
           <input 
            type="text" 
            name="schooling" 
            id="schooling" 
            placeholder="Ex: MESTRADO, DOUTORADO">
        </div>
      </div>

      <div class="item">
        <div>Tipo de Aula</div>
        <div>
          <span>
            <input type="radio" name="type-of-class" id="presential" checked>
            Presencial
          </span>
          <span>
            <input type="radio" name="type-of-class" id="distance">
            Distância
          </span>
        </div>
      </div>

      <div class="item">
        <div>Acompanhamento</div>
        <div>
          <input 
            type="text" 
            name="support" 
            id="support" 
            placeholder="Ex: MATEMÁTICA, FISICA, QUÍMICA">
        </div>
      </div>

      <button type="submit">Enviar</button>
    </section>

  </form>

{% endblock content %}