{% extends 'layout.njk' %}

{% block header %}
  <title>Content - Rocketseat - Desafio</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock header %}

{% block content %}

  <main id="main-content">
    <section class="cards">
      {% for item in items %}

        <div class="card card-{{ item.id }}">

          <div class="card__img-content">
            <img src="{{ item.url }}" alt="{{ item.url_description }}">
          </div>

          <div class="card__info-content">
            <p>{{ item.info }}</p>
          </div>

          <a href="https://rocketseat.com.br/{{item.id}}" target="_blank">
            <div id="{{ item.id }}" class="card__price price-{{ item.id }}">
              <p>{{ item.price }}</p>
            </div>
          </a>

        </div>

      {% endfor %}
    </section>
  </main>

{% endblock content %}