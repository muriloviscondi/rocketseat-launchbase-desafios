{% extends 'layout.njk' %}

{% block header %}
  <title>Content - Rocketseat - Desafio</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock header %}

{% block content %}

  <main id="main-content">
    <section class="cards">
      {% for item in items %}

        <div class="card card-{{ item.id }}">
          <div class="card__img-content">
            <img src="{{ item.url }}" alt="{{ item.url_description }}">
          </div>
          <div class="card__info-content">
            <p>{{ item.info }}</p>
          </div>
          <div id="{{ item.id }}" class="card__price price-{{ item.id }}">
            <p>{{ item.price }}</p>
          </div>
        </div>
      {% endfor %}
    </section>

    <section class="modal-overlay">
      <div class="modal">
        <a class="close-modal">
          <i class="material-icons">close</i>
        </a>
        <a>
          <iframe src="" frameborder="0"></iframe>
        </a>
      </div>
    </section>
  </main>

{% endblock content %}